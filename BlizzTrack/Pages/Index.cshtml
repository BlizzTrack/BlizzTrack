@page
@model BlizzTrack.Pages.IndexModel

@using static BlizzTrack.Extensions.ListExtensions
@{
    ViewData["Title"] = "All Games";
}

<div class="row">
    <div class="col-12" aria-label="breadcrumb col-12" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">All Games</li>
            @if (!string.IsNullOrEmpty(Model.Search))
            {
                <li class="breadcrumb-item">
                    <a asp-page="/Index">Reset Search</a>
                </li>
            }
        </ol>
    </div>

    @if (!string.IsNullOrEmpty(Model.Search))
    {
        <div class="col-12">
            <div class="card ">
                <div class="card-header">
                    <div class="col-sm-12 text-left">
                        <h2 class="card-title">Games matching your search</h2>
                        <h5 class="card-category">Search Results in latest manifest</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive ps">
                        <table class="table tablesorter table-hover" id="">
                            <thead class=" text-primary">
                                <tr>
                                    <th style="width: 25px;" data-toggle="tooltip" data-placement="right" title="Is game encrypted">
                                        <i class="fa fa-lock"></i>
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Code
                                    </th>
                                    <th>
                                        File
                                    </th>
                                    <th>
                                        Current Seqn
                                    </th>
                                    <th>
                                        Previous Seqn
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Manifests.First().Content.Where(x => x.GetName().Contains(Model.Search, StringComparison.OrdinalIgnoreCase) || x.Product.Contains(Model.Search, StringComparison.OrdinalIgnoreCase)))
                                {
                                    if (item.Flags == "cdn") continue;
                                    var f = Model.Manifests.Last().Content.FirstOrDefault(x => x.Product == item.Product && x.Flags == item.Flags);
                                    var config = Model.Configs.FirstOrDefault(x => x.Code == item.Product);

                                    <tr>
                                        <td>
                                            <i class="fa fa-@(config != null && config.Config.Encrypted ? "lock" : "lock-open")"></i>
                                        </td>
                                        <td>@BNetLib.Helpers.GameName.Get(item.Product)</td>
                                        <td>@item.Product</td>
                                        <td>@item.Flags</td>
                                        <td>@item.Seqn</td>
                                        <td>@(f == null ? "N/A" : f.Seqn.ToString())</td>
                                        <td class="text-center">
                                            <a asp-page="/ViewGame" asp-route-code="@item.Product" asp-route-file="@item.Flags" asp-route-latest-seqn="@item.Seqn">
                                                View Manifest
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col-12">
        <div class="card ">
            <div class="card-header">
                <div class="col-sm-12 text-left">
                    <h2 class="card-title">What's changed between versions</h2>
                    <h5 class="card-category">Recent Updates @Model.Manifests.First().Seqn &#x2B05; @Model.Manifests.Last().Seqn</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive ps">
                    <table class="table tablesorter table-hover" id="">
                        <thead class=" text-primary">
                            <tr>
                                <th style="width: 25px;" data-toggle="tooltip" data-placement="right" title="Is game encrypted">
                                    <i class="fa fa-lock"></i>
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Code
                                </th>
                                <th>
                                    File
                                </th>
                                <th>
                                    Current Seqn
                                </th>
                                <th>
                                    Previous Seqn
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SummaryDiff.OrderByAlphaNumeric(x => x.newest.Product))
                            {
                                if (item.newest.Flags == "cdn") continue;
                                var config = Model.Configs.FirstOrDefault(x => x.Code == item.newest.Product);

                                <tr>
                                    <td>
                                        <i class="fa fa-@(config != null && config.Config.Encrypted ? "lock" : "lock-open")"></i>
                                    </td>
                                    <td>@BNetLib.Helpers.GameName.Get(item.newest.Product)</td>
                                    <td>@item.newest.Product</td>
                                    <td>@item.newest.Flags</td>
                                    <td>@item.newest.Seqn</td>
                                    <td>@(item.previous == null ? "N/A" : item.previous.Seqn.ToString())</td>
                                    <td class="text-center">
                                        <a asp-page="/ViewGame" asp-route-code="@item.newest.Product" asp-route-file="@item.newest.Flags" asp-route-previous-seqn="@item.previous?.Seqn" asp-route-latest-seqn="@item.newest.Seqn">
                                            View Manifest
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <div class="col-sm-12 text-left">
                    <h2 class="card-title">Current Seqn</h2>
                    <h5 class="card-category">@Model.Manifests.First().Seqn was indexed on @Model.Manifests.First().Indexed.ToString("dddd, dd MMMM yyyy 'at' HH:MM:ss")</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive ps">
                    <table class="table tablesorter table-hover" id="">
                        <thead class=" text-primary">
                            <tr>
                                <th style="width: 25px;"  data-toggle="tooltip" data-placement="right" title="Is game encrypted">
                                    <i class="fa fa-lock"></i>
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Code
                                </th>
                                <th>
                                    File
                                </th>
                                <th>
                                    Seqn
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Manifests.First().Content.OrderByAlphaNumeric(x => x.Product))
                            {
                                if (item.Flags == "cdn") continue;
                                var config = Model.Configs.FirstOrDefault(x => x.Code == item.Product);

                                <tr class="@(item != Model.Manifests.Last().Content.FirstOrDefault(x => x.Product == item.Product && x.Flags == item.Flags && x.Seqn == item.Seqn) ? "row-has-changes" : "")">
                                    <td>
                                        <i class="fa fa-@(config != null && config.Config.Encrypted ? "lock" : "lock-open")"></i>
                                    </td>
                                    <td>@BNetLib.Helpers.GameName.Get(item.Product)</td>
                                    <td>@item.Product</td>
                                    <td>@item.Flags</td>
                                    <td>@item.Seqn</td>
                                    <td>
                                        <a asp-page="/ViewGame" asp-route-code="@item.Product" asp-route-file="@item.Flags" asp-route-latest-seqn="@item.Seqn">
                                            View Manifest
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <div class="col-sm-12 text-left">
                    <h2 class="card-title">Previous Seqn</h2>
                    <h5 class="card-category">@Model.Manifests.Last().Seqn was indexed on @Model.Manifests.Last().Indexed.ToString("dddd, dd MMMM yyyy 'at' HH:MM:ss")</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive ps">
                    <table class="table tablesorter table-hover" id="">
                        <thead class="text-primary">
                            <tr>
                                <th style="width: 25px;" data-toggle="tooltip" data-placement="right" title="Is game encrypted">
                                    <i class="fa fa-lock"></i>
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Code
                                </th>
                                <th>
                                    File
                                </th>
                                <th>
                                    Seqn
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Manifests.Last().Content.OrderByAlphaNumeric(x => x.Product))
                            {
                                if (item.Flags == "cdn") continue;
                                var config = Model.Configs.FirstOrDefault(x => x.Code == item.Product);

                                <tr>
                                    <td>
                                        <i class="fa fa-@(config != null && config.Config.Encrypted ? "lock" : "lock-open")"></i>
                                    </td>
                                    <td>@BNetLib.Helpers.GameName.Get(item.Product)</td>
                                    <td>@item.Product</td>
                                    <td>@item.Flags</td>
                                    <td>@item.Seqn</td>
                                    <td class="text-center">
                                        <a asp-page="/ViewGame" asp-route-code="@item.Product" asp-route-file="@item.Flags" asp-route-previous-seqn="@item.Seqn">
                                            View Manifest
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
